<Page
    x:Class="Stock_Market_Simulator.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="Transparent"
    mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">

    <Grid>
        <StackPanel Margin="48" Spacing="24">
            <TextBlock Text="Dashboard" FontSize="32" FontWeight="SemiBold"/>
            <StackPanel Orientation="Horizontal" Spacing="48">
                <StackPanel BorderBrush="Gray" BorderThickness="1" Padding="24" Width="200" Spacing="8">
                    <TextBlock Text="Cash Balance" FontWeight="SemiBold"/>
                    <TextBlock x:Name="CashBalanceTextBlock" Text="$0.00" FontSize="28"/>
                </StackPanel>

                <StackPanel BorderBrush="Gray" BorderThickness="1" Padding="24" Width="200" Spacing="8">
                    <TextBlock Text="Portfolio Value" FontWeight="SemiBold"/>
                    <TextBlock x:Name="PortfolioValueTextBlock" Text="$0.00" FontSize="28"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
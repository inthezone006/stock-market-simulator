<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Stock_Market_Simulator.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="Transparent"
    mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="12">
            <TextBlock Text="Stock Market Simulator" FontSize="28" FontWeight="SemiBold" Margin="0,0,0,24" TextAlignment="Center"/>
            <TextBlock Text="Login" FontSize="20" Margin="0,0,0,24" TextAlignment="Center"/>

            <TextBox x:Name="UsernameTextBox" Header="Username" Width="280"/>
            <PasswordBox x:Name="PasswordBox" Header="Password" Width="280"/>
            <Button x:Name="LoginButton" Content="Login" Click="LoginButton_Click" HorizontalAlignment="Stretch" Margin="0,20,0,0"/>
            <ProgressRing x:Name="LoadingRing" IsActive="False" Margin="0,12,0,0"/>
            <HyperlinkButton Content="Don't have an account? Register" Click="RegisterHyperlink_Click" HorizontalAlignment="Center" Margin="0,12,0,0"/>
        </StackPanel>

        <InfoBar x:Name="NotificationInfoBar" IsOpen="False" IsClosable="True" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="24"/>
    </Grid>
</Page>
